<project name="CloudAtlas interpreter" default="compile" basedir=".">
	<property name="build" location="bin"/>
    <path id="cloudatlas.classpath">
        <pathelement location="bin"/>
        <pathelement location="lib/kryo-3.0.0.jar"/>
        <pathelement location="lib/minlog-1.2.jar"/>
        <pathelement location="lib/objenesis-1.2.jar"/>
        <pathelement location="lib/reflectasm-1.09-shaded.jar"/>
        <pathelement location="lib/cup.jar"/>
        <pathelement location="lib/JLex.jar"/>
    </path>
	<target name="init">
		<tstamp/>
		<mkdir dir="${build}"/>
	</target>

	<target name="compile" depends="init">
		<javac srcdir="src" destdir="${build}" includeantruntime="false" debug="true">
			<exclude name="**/test/*"/>
            <classpath refid="cloudatlas.classpath"/>

		</javac>
	</target>

	<target name="clean">
		<delete dir="${build}"/>
	</target>
</project>
